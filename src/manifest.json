{
  "manifest_version": 3,
  "name": "Summa",
  "description": "A Chrome extension to summarize webpages using AI",
  "version": "1.0.0",
  "background": {
    "service_worker": "background.bundle.js"
  },
  "action": {
    "default_title": "Summa - Open Side Panel"
  },
  "side_panel": {
    "default_path": "panel.html"
  },
  "options_page": "options.html",
  "icons": {
    "128": "icon-128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "sidePanel",
    "tabs"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "<all_urls>"
      ],
      "js": [
        "contentScript.bundle.js"
      ],
      "css": [
        "content.styles.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content.styles.css",
        "icon-128.png",
        "icon-34.png"
      ],
      "matches": []
    }
  ]
}